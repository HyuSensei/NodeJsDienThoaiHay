<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="/admin/assets/img/apple-icon.png">
    <title>
        Admin
    </title>
    <%- include("./block/style.ejs") %>
        <style>
            body {
                color: #566787;
                background: #f5f5f5;
                font-family: 'Varela Round', sans-serif;
                font-size: 13px;
            }
        </style>
</head>

<body class="g-sidenav-show  bg-gray-200">
    <%- include("./block/siderbar.ejs") %>
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <div style="margin-top: 50px;" class="container">
                <h4>THÊM MÀU SẢN PHẨM</h4>
                <% if(erro.length>0) { %>
                    <div style="margin: auto;border-radius: 4px;color: aliceblue;font-size: 17px;"
                        class="alert alert-danger" role="alert">
                        <%= erro %>
                    </div>
                    <% } %>
                        <% if(success.length>0) { %>
                            <div style="margin: auto;border-radius: 4px;color: aliceblue;font-size: 17px;"
                                class="alert alert-success" role="alert">
                                <%= success %>
                            </div>
                            <% } %>
                                <form method="post" action="/admin/color_products/store">
                                    <div class="row mb-4">
                                        <div class="col-6">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Sản
                                                    phẩm:</label>
                                                <select name="product_id"
                                                    class="browser-default custom-select form-control">
                                                    <option selected value="">Chọn sản phẩm</option>
                                                    <% products.forEach(function(item){ %>
                                                        <option value="<%= item.id %>">
                                                            <%= item.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Màu:</label>
                                                <select name="color_id"
                                                    class="browser-default custom-select form-control">
                                                    <option selected value="">Chọn màu</option>
                                                    <% colors.forEach(function(item){ %>
                                                        <option value=" <%= item.id %>">
                                                            <%= item.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <button type="submit"
                                            style="background-color: #3b71ca;border: none;height: 50px;border-radius: 8px;font-size: 16px;font-weight: bold;color: azure;">THÊM
                                            MÀU SẢN PHẨM</button>
                                    </div>
                                </form>
            </div>
        </main>
        <%- include("./block/js.ejs") %>
</body>

</html>