<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="/admin/assets/img/apple-icon.png">
    <title>
        Admin
    </title>
    <%- include("./block/style.ejs") %>
        <style>
            body {
                color: #566787;
                background: #f5f5f5;
                font-family: 'Varela Round', sans-serif;
                font-size: 13px;
            }
        </style>
</head>

<body class="g-sidenav-show  bg-gray-200">
    <%- include("./block/siderbar.ejs") %>
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <div style="margin-top: 50px;" class="container">
                <h4>THÊM SẢN PHẨM</h4>
                <% if(erro.length>0) { %>
                    <div style="margin: auto;border-radius: 4px;color: aliceblue;font-size: 17px;"
                        class="alert alert-danger" role="alert">
                        <%= erro %>
                    </div>
                    <% } %>
                        <% if(success.length>0) { %>
                            <div style="margin: auto;border-radius: 4px;color: aliceblue;font-size: 17px;"
                                class="alert alert-success" role="alert">
                                <%= success %>
                            </div>
                            <% } %>
                                <form method="post" action="/admin/products/store" enctype="multipart/form-data">
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row mb-4">
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example1">Tên sản phẩm:</label>
                                                <input type="text" id="form6Example1" class="form-control"
                                                    name="name" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example1">Giá:</label>
                                                <input type="text" id="form6Example1" class="form-control"
                                                    name="price" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Màn hình:</label>
                                                <input type="text" id="form6Example2" class="form-control"
                                                    name="screen" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example1">Độ phân giải:</label>
                                                <input type="text" id="form6Example1" class="form-control"
                                                    name="resolution" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Camera sau:</label>
                                                <input type="text" id="form6Example2" class="form-control"
                                                    name="rear_camera" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Camera trước:</label>
                                                <input type="text" id="form6Example2" class="form-control"
                                                    name="front_camera" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example1">CPU:</label>
                                                <input type="text" id="form6Example1" class="form-control" name="cpu" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Pin:</label>
                                                <input type="text" id="form6Example2" class="form-control" name="pin" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Sim:</label>
                                                <input type="text" id="form6Example2" class="form-control" name="sim" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-6">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Danh Mục:</label>
                                                <select name="category_id"
                                                    class="browser-default custom-select form-control">
                                                    <option selected value="">Chọn danh mục sản phẩm</option>
                                                    <% categories.forEach(function(item){ %>
                                                        <option value="<%= item.id %>">
                                                            <%= item.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Màu:</label>
                                                <select name="color_id"
                                                    class="browser-default custom-select form-control">
                                                    <option selected value="">Chọn màu</option>
                                                    <% colors.forEach(function(item){ %>
                                                        <option value="<%= item.id %>">
                                                            <%= item.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-3">
                                            <img width="300px" src="/images/logo.png" alt="" id="selectedImage">
                                        </div>
                                        <div class="col-5">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Ảnh:</label>
                                                <input id="images_change" type="file" id="form6Example2"
                                                    class="form-control" name="image"
                                                    onchange="displaySelectedImage()" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example1">Bộ nhớ:</label>
                                                <select name="storage_id"
                                                    class="browser-default custom-select form-control">
                                                    <option selected value="">Chọn bộ nhớ</option>
                                                    <% storages.forEach(function(item){ %>
                                                        <option value="<%= item.id %>">
                                                            <%= item.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <button type="submit"
                                            style="background-color: #3b71ca;border: none;height: 50px;border-radius: 8px;font-size: 16px;font-weight: bold;color: azure;">THÊM
                                            SẢN PHẨM</button>
                                    </div>
                                </form>
            </div>
        </main>
        <%- include("./block/js.ejs") %>
            <script>
                function displaySelectedImage() {
                    var input = document.getElementById("images_change");
                    var selectedImage = document.getElementById("selectedImage");

                    if (input.files && input.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (event) {
                            selectedImage.src = event.target.result;
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>
</body>

</html>